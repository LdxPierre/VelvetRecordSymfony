{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<form action="{{path('app_login')}}" method="post" class="col-md-6 mx-auto d-flex flex-column">
    <h1 class="mb-4">Se connecter</h1>

    <div>
        <label for="username" class="form-label">E-mail</label>
        <input type="text" name="_username" id="username" class="form-control" autofocus>
    </div>

    <div class="mt-4">
        <label for="password" class="form-label">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control">
    </div>

    <div class="mt-4">
        <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
        <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}">
    <input type="hidden" name="_target_path" value="/">

    <div>
        <button class="btn btn-success mt-4" type="submit">Connexion</button>
    </div>

    {% if error %}
        <div class="mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>

{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
		<title>
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}
		{% block javascripts %}{% endblock %}
	</head>
	<body class='d-flex flex-column min-vh-100 bg-body'>
		<header>
			<nav class="navbar navbar-expand-md bg-body" data-bs-theme='dark'>
				<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navAside" aria-controls="navAside">
						<span class="navbar-toggler-icon"></span>
					</button>
					<a class="navbar-brand" href="{{ path('app_home')}}">VelvetRecord</a>
					<div class="collapse navbar-collapse">
						<ul class="navbar-nav gap-3">
							<li>
								<a class="nav-item text-decoration-none" href="{{ path('app_home') }}">Acceuil</a>
							</li>
							<li>
								<a class="nav-item text-decoration-none" href="{{ path('app_disc_index')}}">Disques</a>
							</li>
							<li>
								<a class="nav-item text-decoration-none" href="#">Artistes</a>
							</li>
						</ul>
					</div>
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded='false'>Utilisateur</button>
						<ul class="dropdown-menu dropdown-menu-end text-end">
							<li>
								<a class="dropdown-item" href="#">Se connecter</a>
							</li>
							<li>
								<a class="dropdown-item" href="#">S'inscrire</a>
							</li>
						</ul>
					</div>
					<div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="navAside" aria-labelledby="offcanvasLabel">
						<div class="offcanvas-header">
							<h5 class="offcanvas-title" id="offcanvasLabel">Velvet Record</h5>
							<button class="btn-close" type="button" data-bs-dismiss="offcanvas" aria-label="close"></button>
						</div>
						<div class="offcanvas-body">
							<ul class="list-unstyled d-flex flex-column p-2 gap-4">
								<li>
									<a class='text-decoration-none' href="{{ path('app_home')}}">Acceuil</a>
								</li>
								<li>
									<a class='text-decoration-none' href="{{ path('app_disc_index')}}">Disques</a>
								</li>
								<li>
									<a class='text-decoration-none' href="#">Artistes</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</nav>
		</header>
		<div class="flex-fill container-fluid p-4"> {% block body %}{% endblock %}
			</div>
			<footer class='bg-body-tertiary d-flex justify-content-between align-items-center p-5' data-bs-theme='dark'>
				<h5 class='text-body'>Velvet Record</h5>
				<ul class="list-unstyled">
					<li>
						<a href="{{path('app_home')}}">Acceuil</a>
					</li>
					<li>
						<a href="{{path('app_disc_index')}}">Disques</a>
					</li>
					<li>
						<a href="#">Artistes</a>
					</li>
				</ul>
				<span class='text-body'>2023</span>
			</footer>
		</body>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
	</html>

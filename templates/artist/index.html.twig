{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Liste des artistes</h1>
    <a class='btn btn-primary' href="{{ path('app_artist_new') }}">Nouvel artiste</a>
</div>

    <ul class="list-group">
        {% for artist in artists %}
            <li class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                <p class='m-0'>{{artist.name}}</p>
                <div class='row row-cols-2 g-2'>
                    <a class='btn btn-primary btn-sm' href="{{path('app_artist_edit', {id: artist.id})}}">Modifier</a>
                    {{ include('artist/_delete_form.html.twig') }}
                </div>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
